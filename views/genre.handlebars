<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin/Genre</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="/cssAdmin/general.css" />
    <link rel="stylesheet" href="/cssAdmin/media.css" />
    <link rel="stylesheet" href="management.css" />
</head>

<body>
    <div class="grid grid-sections">
        <section class="flex-column management-nav">
            <ion-icon class="logo" name="film-outline"></ion-icon>
            <nav class="vertical-nav">
                <ul class="flex-column nav-list">
                    <a href="/Admin">
                        <li>Trang Chủ</li>
                    </a>
                    <a href="/Movie">
                        <li>Phim</li>
                    </a>
                    <a href="/Genre">
                        <li>Thể Loại</li>
                    </a>
                    <a href="/service">
                        <li>Dịch Vụ</li>
                    </a>
                    <a href="/User">
                        <li>Người Dùng</li>
                    </a>
                </ul>
            </nav>
        </section>
        <section class="content-section">
            <nav class="content-header">
                <h1 class="content-name">Genre Management</h1>
                <div class="center-vertical icons-group">
                    <a href="#">
                        <ion-icon name="notifications-outline"></ion-icon>
                    </a>
                    <a href="../profile.html">
                        <ion-icon name="person-circle-outline"></ion-icon>
                    </a>
                    <a class="nav-logout" href="/account/logout">Logout</a>
                </div>
            </nav>

            <button class="btn open-btn center-vertical" onclick="openForm()">
                <ion-icon name="add-outline"></ion-icon><span>Add New</span>
            </button>
            <div class="add-form-popup" id="inputForm">
                <form method="POST" action="addGenre_process.php" class="form-container">
                    <h2 class="popup-heading">Add Genre</h2>
                    <label for="id">Genre ID</label>
                    <input type="number" placeholder="Enter Genre's ID" name="id" required />
                    <label for="name">Genre Name</label>
                    <input type="text" placeholder="Enter Genre Name" name="name" required />
                    <label for="information">Genre Information</label>
                    <textarea cols="10" rows='10' name="information" style="width: 100%;
              border: 1px solid #ccc;
              outline: none;
            ">
            </textarea>
                    <button type="submit" class="btn popup-btn">Add</button>
                    <button type="button" class="btn popup-btn close-btn" onclick="closeForm()">
                        Close
                    </button>
                </form>
            </div>

            <table class="movie-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each genre}}
                        <tr>
                            <td>
                                
                            </td>
                            <td>
                                {{this.id}}
                            </td>
                            <td>
                                {{this.name}}
                            </td>
                            <td class="actions">
                                <button class="icon-btn">
                                    <a style="color: #000" href="">
                                        <ion-icon name="close-circle-outline"></ion-icon>
                                    </a>
                                </button>
                                <button class="icon-btn">
                                    <a style="color: #000" href="">
                                        <ion-icon name="hammer-outline"></ion-icon>
                                    </a>
                                </button>
                            </td>
                        </tr>
                        {{/each}}

                </tbody>
            </table>
        </section>
    </div>
    <script src="management.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>