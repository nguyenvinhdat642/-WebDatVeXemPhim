<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <title>Movie Seat Booking</title>
  </head>
  <body>
    <div class="movie-container">
      <label>PHIM:</label>
      {{#if nameMovie}}
      <select id="movie">
        <option value="{{nameMovie.Gia}}">{{nameMovie.TenPhim}}</option>
      </select>
      {{/if}}
    </div>

    <ul class="showcase">
      <li>
        <div class="seat"></div>
        <small>Trống</small>
      </li>
      <li>
        <div class="seat selected"></div>
        <small>Đang chọn</small>
      </li>
      <li>
        <div class="seat occupied"></div>
        <small>Đã đặt</small>
      </li>
    </ul>
    <div class="chuatatca">
        <div class="hangghe">
            <div class="a">A</div>
            <div class="a">B</div>
            <div class="a">C</div>
            <div class="a">D</div>
            <div class="a">E</div>
            <div class="a">F</div>
        </div>
        <div class="container">
            <div class="screen"></div>      
            <div class="row">
              {{#each A}}
                <div data-id="{{this.name}}"class="{{this.status}}">{{this.name}}</div>
              {{/each}}
            </div>
            <div class="row">
                {{#each B}}
                <div data-id="{{this.name}}"class="{{this.status}}">{{this.name}}</div>
              {{/each}}
            </div>
            <div class="row">
                {{#each C}}
                <div data-id="{{this.name}}"class="{{this.status}}">{{this.name}}</div>
              {{/each}}
            </div>
            <div class="row">
                {{#each D}}
                <div data-id="{{this.name}}"class="{{this.status}}">{{this.name}}</div>
              {{/each}}
            </div>
            <div class="row">
                {{#each E}}
                <div data-id="{{this.name}}"class="{{this.status}}">{{this.name}}</div>
              {{/each}}
            </div>
            <div class="row">
              {{#each F}}
                <div data-id="{{this.name}}"class="{{this.status}}">{{this.name}}</div>
              {{/each}}
            </div>
          </div>
    </div>

    <p class="text">
      Số ghế đã chọn: <span id="count">0</span> <br>Tổng số tiền: <span
        id="total"
        >0</span>
    </p>
    <div> 
      <a href="/booking/ticket"><button id="btnBack">Trở lại</button></a>
      <a href="/booking/combo"><button id="btnContinue">Tiếp tục</button></a>
    </div>
    <script src="/js/seat.js"></script>
  </body>
</html>
