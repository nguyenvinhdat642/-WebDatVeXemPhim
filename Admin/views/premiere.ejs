<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin/Premiere</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    <!--bootstrap-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link rel="stylesheet" href="./css/general.css" />
    <link rel="stylesheet" href="./css/media.css" />
    <link rel="stylesheet" href="management.css" />
</head>

<body>
    <div class="grid grid-sections">
        <section class="flex-column management-nav">
            <ion-icon class="logo" name="film-outline"></ion-icon>
            <nav class="vertical-nav">
                <ul class="flex-column nav-list">
                    <a href="http://localhost:3000">
                        <li>Trang Chủ</li>
                    </a>
                    <a href="/Movie">
                        <li>Phim</li>
                    </a>
                    <a href="/Premiere">
                        <li>Suất chiếu</li>
                    </a>
                    <a href="/Genre">
                        <li>Thể Loại</li>
                    </a>
                    <a href="/Service">
                        <li>Dịch Vụ</li>
                    </a>
                    <a href="/User">
                        <li>Người Dùng</li>
                    </a>
                    <a href="/revenue">
                        <li>Doanh thu</li>
                    </a>
                </ul>
            </nav>
        </section>
        <section class="content-section">
            <nav class="content-header">
                <h1 class="content-name">Movie Premiere</h1>
                <div class="center-vertical icons-group">
                    <a href="#">
                        <ion-icon name="notifications-outline"></ion-icon>
                    </a>
                    <a href="../profile.html">
                        <ion-icon name="person-circle-outline"></ion-icon>
                    </a>
                    <a class="nav-logout" href="../logout.php">Admin</a>
                </div>
            </nav>

            <button class="btn open-btn center-vertical" onclick="window.location.href='/Premiere/add'">
                <ion-icon name="add-outline"></ion-icon><span>Add New</span>
            </button>


            <table class="movie-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>ID</th>
                        <th>Gia</th>
                        <th>GioiHanDoTuoi</th>
                        <th>Ngay</th>
                        <th>Gio</th>
                        <th>TenPhongChieu</th>
                        <th>MaPhim</th>
                        <th>MaCumRap</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% Premiere.forEach((m, index) => { %>

                        <tr>
                            <td>
                                <%= (index + 1) %>
                            </td>
                            <td>
                                <%= m.MaSuatPhim %>
                            </td>
                            <td>
                                <%= m.Gia %>
                            </td>
                            <td>
                                <%= m.GioiHanDoTuoi %>
                            </td>
                            <td>
                                <%= m.Ngay %>
                            </td>
                            <td>
                                <%= m.Gio %>
                            </td>
                            <td>
                                <%= m.TenPhongChieu %>
                            </td>
                            <td>
                                <%= m.MaPhim  %>
                            </td>
                            <td>
                                <%= m.MaCumRap  %>
                            </td>
                            <td class="actions">
                                <button class="icon-btn btn-edit">
                                <a style="color: #000" href="/Premiere/edit/<%= m.MaSuatPhim %>">
                                    <ion-icon name="hammer-outline"></ion-icon>
                                </a>
                            </button>
                            </td>
                        </tr>
                        <%  }) %>
                </tbody>
            </table>
        </section>
    </div>
    <script src="management.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>