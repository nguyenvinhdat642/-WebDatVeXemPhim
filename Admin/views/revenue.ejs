                    <a href="/User">
                        <li>Người Dùng</li>
                    </a>
                    <a href="/revenue">
                        <li>Doanh thu</li>
                    </a>
                </ul>
            </nav>
        </section>
        <section class="content-section">
            <nav class="content-header">
                <h1 class="content-name">Doanh thu</h1>
                <div class="center-vertical icons-group">
                    <a href="#">
                        <ion-icon name="notifications-outline"></ion-icon>
                    </a>
                    <a href="../profile.html">
                        <ion-icon name="person-circle-outline"></ion-icon>
                    </a>
                    <a class="nav-logout" href="../logout.php">Admin</a>
                </div>
            </nav>

            <div>
                <h2>
                    <% let totalRevenue = 0; %>
                        <% revenue.forEach((m, index) => { %>
                            <% totalRevenue += m.TongTien; %>
                                <% }); %>

                                    Tổng doanh thu:
                                    <%= totalRevenue %>.000 VNĐ
                </h2>
            </div>

            <table class="movie-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>MaDatVe </th>
                        <th>ThoiGian</th>
                        <th>MaSuatPhim </th>
                        <th>MaKhachHang </th>
                        <th>TongTien</th>
                    </tr>
                </thead>
                <tbody>
                    <% revenue.forEach((m, index) => { %>

                        <tr>
                            <td>
                                <%= (index + 1) %>
                            </td>
                            <td>
                                <%= m.MaDatVe %>
                            </td>
                            <td>
                                <%= m.ThoiGian %>
                            </td>
                            <td>
                                <%= m.MaSuatPhim %>
                            </td>
                            <td>
                                <%= m.MaKhachHang %>
                            </td>
                            <td>
                                <%= m.TongTien %>
                            </td>

                        </tr>
                        <%  }) %>
                </tbody>
            </table>
        </section>
    </div>
    <script src="management.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
